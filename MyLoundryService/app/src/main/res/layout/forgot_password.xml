<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="110dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.prolink.loundry.RegisterActivity"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/btn_Forgot"
            android:focusable="false"
            android:textSize="45sp"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/textColour"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Please enter your Registered Email Id below"
                android:focusable="false"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/textColour"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textColorHint="@color/textColour"
            android:fontFamily="sans-serif-light"
            android:hint="@string/email_id"
            android:textColor="@color/textColour"
            android:drawableRight="@drawable/email"
            android:id="@+id/etEmailIdForgot" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Email Id?"
                android:ems="10"
                android:gravity="end"
                android:textColorHint="@color/textColour"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/textColour"
                android:layout_weight="1"
                android:id="@+id/tvForgotPassword" />
        </LinearLayout>

        <Button
            android:onClick="signUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="submit"
            android:background="@color/colorAccent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/btSubmit"
            android:textColor="#eeeeee"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="18sp"
            android:id="@+id/btnBack"
            android:textColor="@color/textColour"
            android:layout_marginTop="@dimen/activity_vertical_margin"

            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
</LinearLayout>